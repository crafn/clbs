def buildInfo(env):
	if env.tag == "default":
		env.tag= "debug"
	build = {
		"debug": {
			"defines": [],
			"flags": ["g", "O0"]
		},
		"release": {
			"defines": [ "NDEBUG" ],
			"flags": [ "O2" ]
		}
	}
	p= Project()
	p.name= "hello_" + env.tag
	p.src= [ "./src/main.cpp" ]
	p.flags= build[env.tag]["flags"]
	p.defines= build[env.tag]["defines"]
	return p
