def buildInfo(env):
	if env.target == "default":
		env.target= "debug"
	build = {
		"debug": {
			"defines": [],
			"flags": ["g", "O0"]
		},
		"release": {
			"defines": [ "NDEBUG" ],
			"flags": [ "O2" ]
		}
	}
	p= Project()
	p.name= "hello_" + env.target
	p.src= [ "./src/main.cpp" ]
	p.flags= build[env.target]["flags"]
	p.defines= build[env.target]["defines"]
	return p
